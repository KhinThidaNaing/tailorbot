<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8">
    <link href="css/style.css" rel="stylesheet" type="text/css" />
    <title>Order List</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <style>
      .details { 
              background-color: #FFF5EE;
              font-size:18px;
              color:#000000;
              margin-top: 100px;
              margin-bottom: 100px;
              margin-right: 150px;
              margin-left: 80px;
              text-align: center;
              line-height:50px;
              font-family:Roboto;
            }
    </style>
 </head>
<div class="details">
  <body>
  <h1>Order Details</h1>

 
  
  <table cellspacing="1" cellpadding="5" border="1">
    <tr>
    
    <th>viberid</th>
    <th>Name</th>
    <th>Comment</th>
    <th>Date</th> 
    <th>Status</th> 
    
    
  </tr>

 
     <tr>

      <td><%= data.viberid %></td>
       <td><%= data.name %></td>
       <td><%= data.comment %></td>
       <td><%= data.order_date %></td>
      <td><%= data.status %></td>
       
      </td>
     
      
     </tr>
   


  

	</table>

 
 <form id="form" action="https://tailorvbbot.herokuapp.com/admin/updateorder/" enctype="multipart/form-data" method="post">
  
  <label for="status">Status:</label>
  <select name="status" id="status">    
    <option value="pending"
    <%if(data.status == "pending"){%>
        <%="selected"%>
    <%}%>
    >Pending</option>
    <option value="in progress"
    <%if(data.status == "in progress"){%>
        <%="selected"%>
    <%}%>
    >In Progress</option>
  <option value="ready to collect"
    <%if(data.status == "ready to collect"){%>
        <%="selected"%>
    <%}%>
    >Ready to Collect</option>
   
  </select> 
  <br>
  <label for="name">Comment</label>
    <textarea name="comment" rows="4" cols="50"></textarea> 
    <br>
  <label for="file">Image</label>
  <input type="file" name="image" />
  
  <input type="hidden"  name="doc_id" value="<%= data.doc_id %>"> <br>

    <input type="submit" value="Submit"> 
  
  
  </form>
 
<script>      
   
      const windowShut = () => {

        setTimeout(()=>{
          window.close();
      },2000);  
        
        }      
      document.getElementById("form").addEventListener("submit", windowShut);   
     

  </script>
  </body>
</div>
</html>
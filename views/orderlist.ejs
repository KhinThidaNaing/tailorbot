<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8">
    <link href="css/style.css" rel="stylesheet" type="text/css" />
    <title>Order List</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <style>
        #orderlist { 
        background-color: #FFE5B4;
        font-size:18px;
        color:#000000;
        margin-top: 100px;
        margin-bottom: 100px;
        margin-right: 150px;
        margin-left: 80px;
        text-align: center;
        line-height:50px;
        font-family:Roboto;
       }
      
    </style>


  </head>

  <div id="orderlist">
  <body>
  <h1>Order List</h1>
 
  
  <table cellspacing="1" cellpadding="5" border="1">
    <tr>
    
    <th>viberid</th>
    <th>Name</th>
    <th>Comment</th>
    <th>Date</th> 
    <th>Status</th> 
    <th>Action</th>
    
  </tr>

  <% data.forEach(function(order){ %>
     <tr>

      <td><%= order.viberid %></td>
       <td><%= order.name %></td>
       <td><%= order.comment %></td>
       <td><%= order.order_date %></td>
      <td><%= order.status %></td>
       <td> <a href="https://tailorvbbot.herokuapp.com/admin/orderdetails/<%= order.id %>">view</a>
      </td>
     
      
     </tr>
  <% }); %>


  

	</table>

 

  </body>
</div>
 

</html>